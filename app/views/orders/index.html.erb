<div class="container-fluid">
  <div class="row">
    <% @orders.each do |order| %>
      <div class="col-sm">
        <h3>
          Order # <%= order.id %>:
          <%= link_to order.product.name, order %>
        </h3>
        <p><%= order.product.description %></p>
        <strong><%= order.product.price.to_i %> KÄ</strong>
      </div><!-- /col -->
    <% end %>
  </div>
</div>
